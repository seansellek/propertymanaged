= form_for @landlord do |f|
  = f.label :name, 'Name:'
  %br
  = f.text_field :name
  %br
  = f.label :email, 'Email:'
  %br
  = f.email_field :email
  %br
  = f.label :password
  %br
  = f.password_field :password
  %br
  = f.label :password_confirmation, "Confirm Password:"
  %br
  = f.password_field :password_confirmation
  = f.submit @landlord.id ? 'Update Landlord' : 'Sign Up'
